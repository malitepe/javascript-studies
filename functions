//ES6
//Arrow Functions
let func = (param1, param2, param3) => expression;


//Nested Functions: you can use function in a function

function sayacartir() {
  let sayac = 0;
  return function () {    return sayac++;  };
}

//Recursion

function pow(x, n) {
  if (n == 1) {    return x;
  } else {    return x * pow(x, n - 1);  }
}



